{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "paths": {},
    "pretty": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "./src/**/*.test.ts",
    "./tests"
  ]
}
